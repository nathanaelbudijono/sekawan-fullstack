// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userid    Int         @id @default(autoincrement())
  username  String
  password  String
  role      String      @default("USER")
  Pengajuan Pengajuan[]
}

model Admin {
  userid   Int    @id @default(autoincrement())
  username String
  password String
  role     String @default("ADMIN")
}

model Kendaraan {
  id      Int           @id @default(autoincrement())
  jenis   TipeKendaraan
  plat    String
  Service String
  BBM     TipeBBM

  driver String
}

enum TipeBBM {
  Solar
  Pertalite
  Pertamax
}

enum TipeKendaraan {
  Truck
  PickUp
  Container
  Box
}

model Pengajuan {
  id               Int             @id @default(autoincrement())
  idPengaju        Users           @relation(fields: [usersUserid], references: [userid])
  tanggal          String
  status           StatusPengajuan
  PilihanKendaraan String
  keterangan       String
  kotaAsal         String
  kotaTujuan       String
  namaPengaju      String
  usersUserid      Int
}

enum StatusPengajuan {
  Diterima
  Diproses
  Disetujui
  Ditolak
}
